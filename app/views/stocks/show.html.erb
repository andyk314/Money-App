
<div class="main">
	<h1><%= @name %></h1>
	<h2></h2>

<table class="table table-striped table-bordered table-hover table-condensed">
	<tr>
		<thead>
			<th>Ticker</th>
			<th>Company</th>
			<th>Price</th>
			<th>Change</th>
			<th>Change%</th>
			<th>P/E</th>
			<th>Dividend</th>
			<th>Days High</th>
			<th>Days Low</th>
			<th>Volume</th>
			<th>Market Cap</th>
			<th>More Info</th>
		</thead>
	</tr>

	<tbody>
		<tr>
			<td><%= @stock.ticker.upcase %></td>
			<td><%= @name %></td>
			<td><%= @price %></td>
			<td><%= @change %></td>
			<td><%= @percent_change %></td>
			<td><%= @pe %></td>
			<td><%= @dividend %></td>
			<td><%= @days_high %></td>
			<td><%= @days_low %></td>
			<td><%= @volume %></td>
			<td><%= @market_cap%></td>
			<td><%= link_to "More Info", "http://finance.yahoo.com/q?s=" + @stock.ticker, :target=> '_blank' %></td>
		</tr>
	</tbody>

	<%= link_to "Back", portfolio_path %>

</div>
