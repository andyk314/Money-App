
<div class="main">
	<h1>Portfolio - <%= @portfolio.name %></h1>
	<h2><%= @company %></h2>

		<div class="stock">
		<table class="table table-striped table-bordered table-hover table-condensed">
			<thead>
				<th>Symbol</th>
				<th>Company</th>
				<th>Price</th>
				<th>Change</th>
				<th>% Change</th>
			</thead>

		<tbody>
			<% @portfolio.stocks.each do |stock| %>
			<tr>
				<td><%= link_to stock.ticker.upcase, stock %></td>
				<td><%= stock_name(stock.ticker).split[0].split(',')[0] %></td>
				<td><%= stock_price(stock.ticker) %> </td>
				<td><%= stock_change(stock.ticker) %> </td>
				<td><%= stock_percent_change(stock.ticker) %> </td>
			<% end %>
		</tbody>
		</table>
			<%= link_to "Back to Portfolios", action: 'index' %>
			<%= link_to "Add Stocks", new_stock_path%>


</div>
