
<div class="container">
	<h1>Portfolio - <%= @portfolio.name %></h1>
	<h2><%= @company %></h2>

		<div class="stock">
		<table class="table table-striped table-bordered table-hover table-condensed">
			<thead>
				<th>Symbol</th>
				<th>Company</th>
				<th>Price</th>
				<th>Change</th>
				<th>% Change</th>
			</thead>

		<tbody>
			<% @info.each do |stock| %>
			<tr>
				<td><%= link_to stock.symbol, stocks_path %></td>
				<td><%= stock.name %></td>
				<td><%= stock.ask_realtime %> </td>
				<td><%= stock.change_realtime %> </td>
				<td><%= stock.percent_change %> </td>
			<% end %>
		</tbody>
		</table>
			<%= link_to "Back to Portfolios", action: 'index'%>
			<%= link_to "Add Stocks", stocks_path %>

</div>
